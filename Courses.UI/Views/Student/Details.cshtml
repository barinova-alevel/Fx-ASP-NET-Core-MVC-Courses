@model Courses.DAL.Models.Dtos.StudentDto
@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
}

<div class="container">
    <h1>@Model.FirstName @Model.LastName</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Student Information</h5>
            <dl class="row">
                <dt class="col-sm-3">Student First Name</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Student Last Name</dt>
                <dd class="col-sm-9">@Model.LastName</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">Edit</a>
        <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary">Back to Courses</a>
    </div>
</div> 