@model Courses.DAL.Models.Dtos.CourseDto
@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <h1>@Model.Name</h1>
    <p>@Model.Description</p>

    <h2>Groups</h2>
    <div class="row">
        @foreach (var group in Model.StudentsGroups)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@group.Name</h5>
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" 
                                data-bs-target="#students-@group.StudentsGroupId" aria-expanded="false">
                            Show Students
                        </button>
                        <div class="collapse mt-3" id="students-@group.StudentsGroupId">
                            <div class="card card-body">
                                <h6>Students:</h6>
                                <ul class="list-group">
                                    @foreach (var student in group.Students)
                                    {
                                        <li class="list-group-item">@student.FirstName @student.LastName</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <a asp-action="Index" class="btn btn-secondary">Back to Courses</a>
</div> 