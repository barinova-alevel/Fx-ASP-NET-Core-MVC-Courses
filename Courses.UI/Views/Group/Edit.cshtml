@model Courses.DAL.Models.Dtos.StudentsGroupDto
@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<div class="container">
    <h1>Edit Group</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <form asp-controller="Group" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StudentsGroupId" />
                <input type="hidden" asp-for="CourseId" />
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Group Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary">Back to Courses</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
